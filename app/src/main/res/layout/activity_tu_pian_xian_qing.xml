<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="20dp">
    <ImageView
        android:id="@+id/wenjian_pic"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_margin="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/wenjian_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文件名："
            android:textSize="22sp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/wenjian_jindu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="经度："
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/wenjian_weidu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="纬度："
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/wenjian_fangxiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="方向角："
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/wenjian_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间："
            android:layout_marginTop="10dp"
            android:textSize="22sp"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <Button
            android:id="@+id/wenjian_baocun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="保存"
            android:background="@drawable/shape_button_tupian"
            android:textSize="20sp"
            android:layout_margin="10dp"/>
        <Button
            android:id="@+id/wenjian_quxiao"
            android:layout_width="0dp"
            android:background="@drawable/shape_button_tupian"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消"
            android:layout_margin="10dp"
            android:textSize="20sp"/>
    </LinearLayout>
</LinearLayout>
